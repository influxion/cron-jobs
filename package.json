{
  "name": "cron-service",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Faraz Patankar",
  "main": "dist/index.js",
  "type": "module",
  "module": "dist/cron-service.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "ts-node-esm src/index.ts",
    "dev": "nodemon"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/cron-service.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/cron-service.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.1",
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^20.1.3",
    "@types/node-cron": "^3.0.2",
    "dts-cli": "^1.6.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.22",
    "size-limit": "^8.0.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "dotenv": "^16.0.3",
    "node-cron": "^3.0.2",
    "puppeteer": "^20.2.0"
  }
}
